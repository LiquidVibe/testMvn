def network='jenkins-${BUILD_NUMBER}'
def seleniumHub='selenium-hub-${BUILD_NUMBER}'
def chrome='chrome-${BUILD_NUMBER}'
def firefox='firefox-${BUILD_NUMBER}'

pipeline {
   agent {
        dockerfile {
            filename 'Dockerfile'
            args '--entrypoint=\'\''
        }
   }
   stages{
          stage ('setup dockerCompose') {
             steps {
                sh 'sudo wget https://github.com/docker/compose/releases/download/1.1.0/docker-compose-Linux-x86_64 -O /usr/local/bin/docker-compose'
                sh 'chmod +x /usr/local/bin/docker-compose'
                sh 'docker-compose --version'
             }
          }

          stage ('use Docker compose') {
              steps{
                sh 'docker-compose up'
              }
          }
          stage('Run Test') {
             steps{
                withMaven(maven : 'TestMaven'){
                    sh 'mvn clean install'
                }
             }
          }
   }
}