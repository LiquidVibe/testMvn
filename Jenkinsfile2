pipeline {
   agent {
        dockerfile {
            filename 'Dockerfile'
            args '--entrypoint=\'\''
        }
   }
   stages{
          stage ('setup dockerCompose') {
             steps {
                sh 'docker-compose --version'
                sh 'pwd'
                sh 'ls'
                sh 'sudo docker run hello-world'
             }
          }

          stage ('use Docker compose') {
              steps{
                sh 'sudo docker-compose up -d'
              }
          }
          stage ('Run tests'){
                steps{
                    sh 'sudo docker run --rm --name mavencontainer -v "$(pwd)":/dockerMvnRepo -w /dockerMvnRepo maven:3.6.0-jdk-11-slim mvn clean install'
                }
          }

          stage('Remove mavencontainer') {
              steps {
                    sh 'sudo docker rm mavencontainer'
              }
          }

          stage('Remove docker-compose files') {
              steps{
                sh 'docker-compose -f ./docker-compose rm -f -s'
                sh 'docker-compose -f ./docker-compose.yml down --rmi local --remove-orphans'
              }
          }
   }
}