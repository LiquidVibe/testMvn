def network='jenkins-${BUILD_NUMBER}'
def seleniumHub='selenium-hub-${BUILD_NUMBER}'
def chrome='chrome-${BUILD_NUMBER}'
def firefox='firefox-${BUILD_NUMBER}'

pipeline {
   agent {
        dockerfile {
            filename 'Dockerfile'
            args '--entrypoint=\'\''
        }
   }
   stages{
          stage ('setup dockerCompose') {
             steps {
                sh 'docker-compose --version'
                sh 'pwd'
                sh 'ls'
                sh 'sudo -i'
                sh 'docker run -it --privileged --name dockertest -d docker:dind'
                sh 'docker run --rm --link dockertest:docker docker sh'
                sh 'docker run hello-world'
             }
          }

          stage ('use Docker compose') {
              steps{
                sh 'docker-compose up'
              }
          }
          stage('Run Test') {
             steps{
                withMaven(maven : 'TestMaven'){
                    sh 'mvn clean install'
                }
             }
          }
   }
}